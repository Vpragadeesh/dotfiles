{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 1
    }
  },
  "hyprland/window": {
    "format": "{class}",
    "separate-outputs": true
  },
  "custom/appmenu": {
    "format": "ÔÜí ",
    "on-click": "rofi -disable-history -drun-match-fields name -show drun -theme-str '@import \"app.rasi\"'",
    "on-click-right": "killall rofi",
    "tooltip": false
  },
  "custom/exit": {
    "format": " ",
    "on-click": "",
    "tooltip": false
  },
  "custom/sep": {
    "format": " | "
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "clock": {
    "interval": 1,
    "format": "<span color=\"#6D8895\"> </span>  {:%H:%M:%S  %a, %d %b %y}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "format-alt": "<span color=\"#fff\">Û∞É≠ </span>  {:%Y-%m-%d, %a}",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 4,
      "weeks-pos": "none",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "interval": 1,
    "format": "<span color=\"#f7768e\">Ôãõ </span> {usage}%",
    "on-click": "kitty -e btop",
    "max-length": 10
  },
  "memory": {
    "interval": 1,
    "format": "<span color=\"#FBC02D\">Ôî∏ </span> {used} G",
    "on-click": "kitty -e btop",
    "max-length": 10
  },
  "network": {
    "tooltip": true,
    "format-alt-wifi": "  {essid}",
    "rotate": 0,
    "format-alt-ethernet": "Û∞àÄ ",
    "tooltip-format": "<big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
    "format-linked": "Û∞àÄ {ifname} (No IP)",
    "format-disconnected": "Û∞ñ™ ",
    "tooltip-format-disconnected": "Disconnected",
    "format": "<span foreground='#99ffdd'>ÔÄô  {bandwidthDownBytes}</span>  <span foreground='#ffcc66'> ÔÇì  {bandwidthUpBytes}</span> <span foreground='#ccccff'> ÔÑ§  {ipaddr}</span>",
    "interval": 1,
    "on-click-right": "kitty -e nmtui",
    "max-length": 45
  },
  "disk": {
    "interval": 2,
    "format": "üíæ {used} ",
    "on-click": "kitty -e gdu /",
    "path": "/home/pragadeesh/"
  },
  "temperature": {
    "format": " {temperatureC}¬∞C  ",
    "format-critical": " {temperatureC}¬∞C  ",
    "interval": 1,
    "critical-threshold": 60,
    "tooltip": false
  },
  "battery": {
    "interval": 1,
    "states": {
      "warning": 80,
      "critical": 50
    },
    "format": "<span color=\"#9ece6a\">{icon}</span>{capacity}% | {health}",
    "format-charging": "<span color=\"#9ece6a\"></span>{capacity}%{time}",
    "format-plugged": "{capacity}%",
    "format-alt": "{icon}{time} {health}",
    "format-icons": ["Û∞Å∫ ", "Û∞Åº ", "Û∞Åø ", "Û∞ÇÅ ", "Û∞Åπ "]
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": "ÔÄ•  Ôö© M",
    "format-muted": "Ôö© M",
    "format-source": "",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê ",
      "headset": "Ôñê ",
      "default": ["ÔÄ¶ ", "ÔÄ® ", "ÔÄ® "]
    },
    "on-click": "pactl set-sink-mute 0 toggle"
  },
 "mpris": {
 "format": "<span color='#FF9400'>{player_icon}</span>  {player} {status_icon}",
 "format-paused": "{player_icon}  {player} {status_icon}",
 "player-icons": {
   "default": "",
   "mpv": "üé¨",
   "vlc": "üé¨",
   "spotify": "",
   "firefox": "ü¶ä",
   "zen": "ü¶ä",
   "chrome": "üåê",
   "chromium": "üåê"
 },
  "status-icons": {
    "playing": "‚è∏",
    "paused": "‚ñ∂"
  },
  "title-len": 25,
  "max-length": 60,
  "on-click": "playerctl play-pause"
  },
  "bluetooth": {
    "format": "<span color=\"#7aa2f7\"></span>  On",
    "format-disabled": "<span color=\"#fff\"></span>  Off",
    "format-connected": "<span color=\"#7aa2f7\"></span>  {device_alias}",
    "format-off": "<span color=\"#555\"></span>  Off",
    "interval": 1,
    "max-length": 5,
    "on-click": "export GTK_THEME=Adwaita:dark && blueman-manager",
    "on-scroll-up": "bluetoothctl power off",
    "on-scroll-down": "bluetoothctl power on",
    "format-no-controller": ""
  },
  "custom/gpu": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits | awk '{print \"<span color=\\\"#ffffff\\\"> Û∞æÜ  \"$1\"%</span> \"} '",
    "interval": 1,
    "format": "{}",
    "on-click": "kitty -e watch -n 0.5 nvidia-smi",
    "tooltip": false
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "<span color=\"#e0af68\">{icon}</span> {percent}%",
    "on-scroll-down": "brightnessctl -q s +10%",
    "on-scroll-up": "brightnessctl -q s 10%-",
    "format-icons": ["Û∞É† ", "Û∞É† "]
  },
  "custom/visualizer": {
    "exec": "cava -p ~/.config/cava/waybar_config",
    "return-type": "raw",
    "interval": "1",
    "format": "{}"
  },
  "custom/status": {
    "exec": "~/.config/waybar/status.sh",
    "interval": 1
  }
}
