{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 2
    }
  },
  "hyprland/window": {
    "format": "{class}",
    "separate-outputs": true
  },
  "custom/appmenu": {
    "format": "ÔÜí",
    "on-click": "rofi -disable-history -drun-match-fields name -show drun -theme-str '@import \"app.rasi\"'",
    "on-click-right": "killall rofi",
    "tooltip": false
  },
  "custom/exit": {
    "format": "ÔÄë",
    "on-click": "wlogout",
    "tooltip": false
  },
  "custom/sep": {
    "format": "|"
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "interval": 1,
    "format": "<span color=\"#6D8895\">ÔÄó</span>  {:%H:%M:%S, %a, %d %b %Y}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "format-alt": "<span color=\"#fff\">Û∞É≠</span>  {:%Y-%m-%d, %a}",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 4,
      "weeks-pos": "none",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "interval": 1,
    "format": "<span color=\"#f7768e\">Ôãõ</span> {usage}%",
    "max-length": 10
  },
  "memory": {
    "interval": 1,
    "format": "<span color=\"#FBC02D\">Ôî∏</span> {used} G",
    "max-length": 10
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "<span color=\"#4DD0E1\">Ôá´</span>  {essid}",
    "format-ethernet": "Ôûñ  {ifname}",
    "format-disconnected": "Disconnected",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "Ôûñ {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 10,
    "on-click": "kitty -e nmtui-connect"
  },
  "disk": {
    "interval": 60,
    "format": "üíæ {percentage_used}% ",
    "path": "/"
  },
  "temperature": {
    "format": " {temperatureC}¬∞C",
    "format-critical": " {temperatureC}¬∞C",
    "interval": 1,
    "critical-threshold": 60,
    "tooltip": false
  },
  "battery": {
    "interval": 1,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span color=\"#9ece6a\">{icon}</span>{capacity}% | {health}",
    "format-charging": "<span color=\"#9ece6a\">Ôóß</span>  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": ["Û∞Å∫ ", "Û∞Åº ", "Û∞Åø ", "Û∞ÇÅ ", "Û∞Åπ "]
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": "Ôö© Muted",
    "format-muted": "Ôö© Muted",
    "format-source": "",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê ",
      "headset": "Ôñê ",
      "default": ["ÔÄ¶ ", "ÔÄ® ", "ÔÄ® "]
    },
    "on-click": "pactl set-sink-mute 0 toggle"
  },
  "bluetooth": {
    "format": "<span color=\"#7aa2f7\">Ôäì</span>  On",
    "format-disabled": "<span color=\"#fff\">Ôäì</span>  Off",
    "format-connected": "<span color=\"#7aa2f7\">Ôäì</span>  {device_alias}",
    "format-off": "",
    "interval": 1,
    "max-length": 5,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "<span color=\"#e0af68\">{icon}</span> {percent}%",
    "format-icons": ["Û∞É†", "Û∞É†"]
  }
}
